<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#FF0000"
    tools:context=".ui.activities.FilterPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="262dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.TeamHFinalProject.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FF0000"
                android:backgroundTint="#FF0000"
                android:contentDescription="@string/shareButtonText"
                android:visibility="visible"
                app:popupTheme="@style/Theme.TeamHFinalProject.PopupOverlay">

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="#F00000"
                    android:contentDescription="@string/shareButtonText"
                    android:scaleType="fitCenter"
                    android:src="@drawable/share_white"
                    tools:src="@drawable/share_white" />

                <ImageButton
                    android:id="@+id/resetButton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="#FF0000"
                    android:contentDescription="@string/resetButtonText"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reversewhite"
                    tools:src="@drawable/reversewhite" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="755dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <TextView
                        android:id="@+id/CenterText"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/centerText"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.6" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/defaultPrice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/ItemName2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/defaultName"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemDescription2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"

                        android:text="@string/defaultDescription"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage2"
                        app:layout_constraintTop_toBottomOf="@+id/ItemName2" />

                    <ImageView
                        android:id="@+id/ItemImage2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/defaultImageDescription"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/item_default" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/defaultPrice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/ItemName1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/defaultName"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemDescription1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"

                        android:text="@string/defaultDescription"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage1"
                        app:layout_constraintTop_toBottomOf="@+id/ItemName1" />

                    <ImageView
                        android:id="@+id/ItemImage1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/defaultImageDescription"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/item_default" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/defaultPrice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/ItemName"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/defaultName"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ItemDescription"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"

                        android:text="@string/defaultDescription"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toEndOf="@+id/ItemImage"
                        app:layout_constraintTop_toBottomOf="@+id/ItemName" />

                    <ImageView
                        android:id="@+id/ItemImage"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/defaultImageDescription"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/item_default" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>