<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamh.teamhfinalproject">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamHFinalProject">
        <activity android:name=".ui.activities.FilterPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamh.teamhfinalproject.MainActivity" />
        </activity>
        <activity android:name=".ui.activities.TermsAndConditionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamh.teamhfinalproject.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TeamHFinalProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.GiftListPageActivity">
        </activity>

        <activity android:name=".ui.activities.LoadingPage">
        </activity>
    </application>

</manifest>